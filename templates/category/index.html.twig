{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    <ul>
    {% for key, category in categories %}
        <li>
            <span>{{ category.getCode() }}</span>
            <a href="{{ path('categories_show', { id: category.getId() }) }}">View</a>
            <ul>
            {% for product in category.getProducts() %}
                <li>
                    <span>{{ product.getName() }}, {{ product.getPrice() }}</span>
                    <a href="{{ path(
                        'products_show', 
                        { id: product.getId() }
                        ) }}">View</a>
                </li>
            {% endfor %}
            </ul>
        </li>
    {% endfor %}
</ul>
</div>
{% endblock %}
